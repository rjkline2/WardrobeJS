@model IEnumerable<Wardrobe.Models.Outfit>

@{
    ViewBag.Title = "Index of Outfits";
}

<h2 class="leader">Index of Outfits</h2>

<p class="btn btn-default">
    @Html.ActionLink("Create New", "Create")
</p>
<p></p>
<div class="row clothescontainer">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 ">
            <div class="thumbnail reviewthumb">
                <div class="caption">
                    <p class="leader">@Html.DisplayFor(modelItem => item.OutName)</p>
                    <p><img class="clothespix" src="@Html.DisplayFor(modelItem => item.Top.TopPic)" /></p>
                    <p><img class="clothespix" src="@Html.DisplayFor(modelItem => item.Bottom.BottomPic)" /></p>
                    <p><img class="clothespix" src="@Html.DisplayFor(modelItem => item.Sho.ShoePic)" /></p>
                    <p><img class="clothespix" src="@Html.DisplayFor(modelItem => item.Accessory.AccPic)" /></p>
                    <p>@Html.DisplayNameFor(model => model.Occasion.OccName): @Html.DisplayFor(modelItem => item.Occasion.OccName)</p>
                    <p>@Html.DisplayNameFor(model => model.Season.SeasonName):@Html.DisplayFor(modelItem => item.Season.SeasonName)</p>
                    <p class="btn btn-default">
                        @Html.ActionLink("Edit", "Edit", new { id = item.TopID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.TopID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TopID })
                    </p>
                </div>
            </div>
        </div>
    }
</div>
